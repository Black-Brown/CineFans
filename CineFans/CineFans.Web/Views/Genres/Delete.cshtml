@model CineFans.Web.ViewModels.GenreViewModel

@{
    ViewData["Title"] = "Eliminar Género";
}

<h2>¿Estás seguro de que quieres eliminar este género?</h2>

<div>
    <h4>@Model.Name</h4>
</div>

<form asp-action="Delete" asp-route-id="@Model.GenreId" method="post">
    <input type="hidden" asp-for="GenreId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
