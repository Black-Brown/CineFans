@model CineFans.Web.ViewModels.UsersViewModel

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3><i class="fas fa-trash-alt"></i> Confirmar Eliminación</h3>
        </div>
        <div class="card-body">
            <p class="text-danger">¿Estás seguro que deseas eliminar al siguiente usuario?</p>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <img src="@Url.Content(string.IsNullOrEmpty(Model.ProfilePicture) ? "~/images/default-user.png" : Model.ProfilePicture)" class="img-fluid rounded" alt="Foto de perfil" />
                </div>
                <div class="col-md-8">
                    <h5><i class="fas fa-user"></i> @Model.Name</h5>
                    <p><i class="fas fa-envelope"></i> @Model.Email</p>
                    <p><i class="fas fa-calendar-alt"></i> Registrado desde: @Model.RegistrationDate.ToShortDateString()</p>
                </div>
            </div>
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
