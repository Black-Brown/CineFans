@model CineFans.Web.ViewModels.UsersViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-user-circle"></i> Detalles del Usuario</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="@Url.Content(string.IsNullOrEmpty(Model.ProfilePicture) ? "~/images/default-user.png" : Model.ProfilePicture)" class="img-fluid rounded mb-3" alt="Foto de perfil" />
                </div>
                <div class="col-md-8">
                    <h5><i class="fas fa-user"></i> @Model.Name</h5>
                    <p><i class="fas fa-envelope"></i> @Model.Email</p>
                    <p><i class="fas fa-key"></i> Hash de Contraseña: @Model.PasswordHash</p>
                    <p><i class="fas fa-calendar-alt"></i> Fecha de Registro: @Model.RegistrationDate.ToShortDateString()</p>
                </div>
            </div>
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>
