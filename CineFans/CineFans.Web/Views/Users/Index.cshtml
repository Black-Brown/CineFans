@model IEnumerable<CineFans.Web.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Gestión de Usuarios</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Usuario
        </a>
    </div>

    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4 mb-4 d-flex">
                <div class="card shadow-sm h-100 d-flex flex-column w-100">
                    <div class="card-body flex-grow-1 d-flex flex-column">
                        <h5 class="card-title">@user.Name</h5>
                        <p class="card-text text-muted"><i class="fas fa-envelope"></i> @user.Email</p>
                        <p class="card-text"><i class="fas fa-calendar-alt"></i> Desde: @user.RegistrationDate.ToShortDateString()</p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Ver
                            </a>
                            <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
