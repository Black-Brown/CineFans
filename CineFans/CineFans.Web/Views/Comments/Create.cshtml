@model CineFans.Web.ViewModels.CommentsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a New Comment</h1>

<h4>Comment Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select asp-for="UserId" class="form-control" asp-items="Model.Users"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MovieId" class="control-label">Movie</label>
                <select asp-for="MovieId" class="form-control" asp-items="Model.Movies"></select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label">Text</label>
                <textarea asp-for="Text" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Comment</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
