@model List<CineFans.Web.ViewModels.CommentsViewModel>

@{
    ViewData["Title"] = "Comments";
}

<h1>Comments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Comment</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Comment</th>
            <th>Movie</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var comment in Model)
            {
                <tr>
                    <td>@comment.Text</td>
                    <td>@comment.MovieTitle</td> <!-- asegúrate que tienes MovieTitle en el ViewModel -->
                    <td>@comment.UserName</td>    <!-- asegúrate que tienes UserName en el ViewModel -->
                    <td>
                        <a asp-action="Details" asp-route-id="@comment.CommentId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@comment.CommentId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@comment.CommentId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No comments found.</td>
            </tr>
        }
    </tbody>
</table>
