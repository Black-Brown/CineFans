@model CineFans.Web.ViewModels.CommentsViewModel

@{
    ViewData["Title"] = "Delete Comment";
}

<h1>Delete Comment</h1>

<h3>Are you sure you want to delete this comment?</h3>

<div>
    <h4>Comment Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieTitle)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CommentId" />
        <button type="submit" class="btn btn-danger">Delete Comment</button> |
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
