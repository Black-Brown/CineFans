@model CineFans.Web.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "Eliminar Película";
}

<div class="container mt-4">
    <h1 class="text-danger"><i class="fas fa-trash-alt"></i> Eliminar Película</h1>
    <h3 class="text-muted mb-4">¿Estás seguro que deseas eliminar esta película?</h3>

    <div class="card border-danger shadow">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="Poster de @Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h4 class="card-title">@Model.Title</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Año:</dt>
                        <dd class="col-sm-8">@Model.Year</dd>

                        <dt class="col-sm-4">Director:</dt>
                        <dd class="col-sm-8">@Model.Director</dd>

                        <dt class="col-sm-4">Género:</dt>
                        <dd class="col-sm-8">@Model.GenreName</dd> <!-- Cambio aquí -->
                    </dl>

                    <form method="post" asp-action="Delete" asp-route-id="@Model.MovieId">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash"></i> Confirmar Eliminación
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                            <i class="fas fa-arrow-left"></i> Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
