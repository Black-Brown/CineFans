@model CineFans.Web.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "Editar Película";
}

<div class="container mt-4">
    <h1><i class="fas fa-edit"></i> Editar Película</h1>
    <hr />

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Title" class="form-label">Título</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Descripción</label>
            <textarea class="form-control" id="Description" name="Description" rows="3" required>@Model.Description</textarea>
        </div>

        <div class="mb-3">
            <label for="Year" class="form-label">Año</label>
            <input type="number" class="form-control" id="Year" name="Year" value="@Model.Year" required />
        </div>

        <div class="mb-3">
            <label for="Director" class="form-label">Director</label>
            <input type="text" class="form-control" id="Director" name="Director" value="@Model.Director" required />
        </div>

        <div class="mb-3">
            <label for="GenreName" class="form-label">Género</label>
            <input type="text" class="form-control" id="GenreName" name="GenreName" value="@Model.GenreName" required />
        </div>

        <div class="mb-3">
            <label for="ImageFile" class="form-label">Imagen</label>
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" />
        </div>

        <button type="submit" class="btn btn-warning">
            <i class="fas fa-save"></i> Guardar cambios
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-list"></i> Volver al Listado
        </a>
    </form>
</div>
