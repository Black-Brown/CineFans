@model List<CineFans.Web.ViewModels.MovieWithCommentsViewModel>

@{
    ViewData["Title"] = "Movies with Comments";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Welcome to CineFans</h1>

    @foreach (var movie in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@movie.ImageUrl" alt="Poster de @movie.Title" class="movie-poster rounded w-100 h-90 object-fit-cover" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text"><strong>Director:</strong> @movie.Director</p>
                        <p class="card-text"><strong>Year:</strong> @movie.Year</p>
                        <p class="card-text"><strong>Genre:</strong> @movie.GenreName</p>
                        <p class="card-text">@movie.Description</p>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <h5>Comments:</h5>
                <ul class="list-group list-group-flush">
                    @foreach (var comment in movie.Comments)
                    {
                        <li class="list-group-item">
                            <strong>User @comment.UserId:</strong> @comment.Text
                            <br><em class="text-muted">(@comment.Date.ToString("g"))</em>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>
