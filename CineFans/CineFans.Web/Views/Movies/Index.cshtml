@model IEnumerable<CineFans.Web.ViewModels.MovieViewModel>
@{
    ViewData["Title"] = "Catálogo de Películas";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Catálogo de Películas</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Película
        </a>
    </div>

    <div class="container py-4">
        <div class="row g-4">
            @foreach (var movie in Model)
            {
                <div class="col-12">
                    <div class="d-flex shadow-sm rounded border p-3 align-items-stretch">

                        <!-- Imagen de la película -->
                        <div class="flex-shrink-0 me-4" style="width: 300px;">
                            <img src="@movie.ImageUrl" alt="Poster de @movie.Title" class="movie-poster rounded w-100 h-90 object-fit-cover" />
                        </div>

                        <!-- Información -->
                        <div class="flex-grow-1 d-flex flex-column justify-content-between">
                            <div>
                                <h4>@movie.Title</h4>
                                <p class="mb-2 text-muted">@movie.Description</p>
                                <small class="text-secondary">
                                    <i class="fas fa-calendar-alt me-1"></i> @movie.Year |
                                    <i class="fas fa-user-tie me-1 ms-2"></i> @movie.Director |
                                    <span class="badge bg-primary">@movie.GenreName</span>
                                </small>
                            </div>

                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <a asp-action="Details" asp-route-id="@movie.MovieId" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i> Ver</a>

                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@movie.MovieId">
                                                <i class="fas fa-edit me-2"></i>Editar
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@movie.MovieId">
                                                <i class="fas fa-trash me-2"></i>Eliminar
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
