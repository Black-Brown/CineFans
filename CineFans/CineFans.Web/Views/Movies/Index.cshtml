@model IEnumerable<CineFans.Web.ViewModels.MovieViewModel>
@{
    ViewData["Title"] = "Movie";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Catálogo de Películas</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Película
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ImageUrl" class="card-img-top movie-poster" alt="Poster de @item.Title">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        <div class="movie-details">
                            <div class="mb-2">
                                <i class="fas fa-calendar-alt me-2"></i>@item.Year
                            </div>
                            <div class="mb-2">
                                <i class="fas fa-user-tie me-2"></i>@item.Director
                            </div>
                            <div class="genre-badge">
                                <span class="badge bg-primary">@item.Genre?.Name</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@item.MovieId"
                               class="btn btn-sm btn-outline-info">
                                <i class="fas fa-eye"></i>
                            </a>

                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary"
                                        type="button"
                                        data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-action="Edit"
                                           asp-route-id="@item.MovieId">
                                            <i class="fas fa-edit me-2"></i>Editar
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-action="Delete"
                                           asp-route-id="@item.MovieId">
                                            <i class="fas fa-trash me-2"></i>Eliminar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>